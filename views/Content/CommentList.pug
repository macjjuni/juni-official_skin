div.commentList
    s_rp_container
        ol
            s_rp_rep
                li(id='[##_rp_rep_id_##]')
                    div(class='[##_rp_rep_class_##]')
                        div.comment-wrap
                            div.thumb-wrap
                                img.comment-thumb(src="[##_rp_rep_logo_##]" alt="comment thumbnail")
                                span.comment-name [##_rp_rep_name_##]
                            p.comment-content [##_rp_rep_desc_##]

                        div.control-wrap
                            span.comment-date [##_rp_rep_date_##]
                            div.control-btn-wrap
                                button.commend-modify(href='#', onclick='[##_rp_rep_onclick_delete_##]')
                                    span 수정/삭제
                                button.commend-write(href='#', onclick='[##_rp_rep_onclick_reply_##]')
                                    span 댓글달기
                        
                    s_rp2_container
                        ul
                            s_rp2_rep
                                li(id='[##_rp_rep_id_##]')
                                    iv.comment-wrap
                                        div.thumb-wrap
                                            img.comment-thumb(src="[##_rp_rep_logo_##]" alt="comment thumbnail")
                                            span.comment-name [##_rp_rep_name_##]
                                        p.comment-content [##_rp_rep_desc_##]

                                    div.control-wrap
                                        span.comment-date [##_rp_rep_date_##]
                                        div.control-btn-wrap
                                            button.commend-modify(href='#', onclick='[##_rp_rep_onclick_delete_##]')
                                                span 수정/삭제
                                            button.commend-write(href='#', onclick='[##_rp_rep_onclick_reply_##]')
                                                span 댓글달기
    style.
        .rp_general, .rp_general ~ ul>li, .rp_secret, .rp_secret ~ ul>li{
            padding: 10px;
            background: #f2f2f2;
            border-radius: 3px;
            margin-top: 40px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .dark .rp_general, .dark .rp_general ~ ul > li, .dark .rp_general ~ ul > li{
            background-color: #242428;
            border: 1px solid #4f4f4f;
        }
        
        .rp_general ~ ul>li, .rp_secret ~ ul>li {
            margin-left: 30px;
            margin-top: 8px !important;
        }
        .comment-wrap{ 
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }   
        .comment-thumb{
            width: 55px; height: 55px;
            border-radius: 40px;
            box-shadow: rgba(9, 30, 66, 0.25) 0px 4px 8px -2px, rgba(9, 30, 66, 0.08) 0px 0px 0px 1px;
        }
        .comment-content{
            width: 100%;
            min-height: 60px;
            margin-left: 10px;
            padding: 10px;
            font-size: 1rem;
            line-height: 1.6;
            background: #fff;
            border-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 2px 0px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .dark .comment-content {
            background: #3f3f45;
        }
        .control-wrap{
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-top: 8px;
        }
        .control-btn-wrap{
            margin-left: 15px;
        }
        .thumb-wrap{
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            flex-wrap: nowrap;
        }
        .dark .thumb-wrap::after {
            content: '';
            position: absolute;
            top: 0; left: 50%;
            transform: translate(-50%, 0);
            width: 56px; height: 56px;
            border-radius: 50%;
            background-color: rgba(0,0,0,0.4);
        }
        .comment-name{
            margin-top: 7px;
            font-size: 0.9rem;
        }
        .comment-name>a {
            white-space: nowrap;
            max-width: 80px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .comment-date{
            font-size: 0.8rem;
            position: relative;
            top: 2px;
        }
        .commend-write {
            margin-left: 5px;
        }
        .commend-modify, .commend-write{
            padding: 0.3rem 0.6rem;
            font-size: 0.8rem;
        }
        .dark .commend-modify, .dark .commend-write{
            border: 1px solid #545454;
            background-color: #4a4a4a;
        }
        .commend-modify>span, .commend-write>span{
            top: 1px;
        }
        @media screen and (max-width: 900px) {
            .rp_general, .rp_general ~ ul>li{
                margin-top: 20px;
            }
        }