div.profile-wrap
    div.img-wrap
        img.profile-img(src="[##_image_##]" alt="blog_profile")
        span.profile-emoji 🔥
    ul.todayCnt
        li
            span(class="cntTxt" id="todayCnt") [##_count_today_##] 
            span.cntTitle Today
        li
            span(class="cntTxt" id="ydayCnt") [##_count_yesterday_##] 
            span.cntTitle Y-day
        li
            span(class="cntTxt" id="totalCnt") [##_count_total_##] 
            span.cntTitle Total
include JuniVoxel
div.profile-msg
    span 👨🏻‍💻 Front-End Developer
    //- span 🪧 꾸준함이 생명
    //- span 💰 Crypto Maximalist

    style.
        .profile-wrap {
            z-index: 9000;
            width: 248px;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
        }
        .img-wrap{
            position: relative;
            width: 80px;
            height: 80px;
            border-radius: 40px;
            transform-style: preserve-3d;
            will-change: transform;
            transition: transform 0.5s ease;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
        }
        .profile-emoji {
            position: absolute;
            bottom: 8px; right: 8px;
            width: 20px; height: 20px;
            font-size: 2rem;
            z-index: 9000;
            transition: transform 0.5s ease;
        }
        .profile-img{
            position: relative;
            width: 80px; height: 80px;
            border-radius: 40px;
            z-index: 9000;
        }
        .img-wrap:hover {
            transform: translateZ(10px) rotateX(20deg) rotateY(30deg);
        }
        .img-wrap:hover>.profile-emoji {
            transform: translateZ(50px);
        }

        .todayCnt {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            width: 100%; height: 80px;
        }
        .todayCnt>li:first-child {
            margin-left: 0.8rem;
        }
        .todayCnt>li {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        .todayCnt>li>.cntTxt{
            margin-bottom: 10px;
            font-weight: bold;
        }
        .todayCnt>li>.cntTitle{
            display: block;
            font-size: 0.85rem;
            white-space: nowrap;
        }
        .profile-msg {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: flex-start;
            align-items: flex-start;
            color: #fff;
            padding: 10px 8px;
            border-radius: 4px;
            animation: rotate 2.5s ease-in infinite;
            background: rgba(0,0,0,0.3);
            box-shadow: rgb(0 0 0 / 24%) 0px 3px 8px;
            transition: 0.3s ease;
            z-index: 1;
        }

        .dark .profile-msg {
            background: rgba(255, 255, 255, 0.15);
        }
        .profile-msg>span {
            width: 100%;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            text-align: center;
            transition: 0.15s ease;
        }
        .juni-voxel-wrap:hover ~ .profile-msg>span {
            text-shadow: red -2px 0, cyan 2px 0;
        }    