div.link-wrap
    a.githubBtn(href="https://github.com/macjjuni" target="_blank")
        i(class="bx bx-md bxl-github")
    a.instaBtn(href="https://www.instagram.com/juni.btc/" target="_blank")
        i(class="bx bx-md bxl-instagram")

    style.
        .link-wrap{
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .link-wrap>a { margin: 0 0 0 1.2rem; }
        .githubBtn {
            width: 28px;
            height: 28px;
            border-radius: 15px;
        }
        .instaBtn {
            width: 27px;
            height: 27px;
            border-radius: 8px;
        }
        .instaBtn>i { margin-top: 1px; }
        .githubBtn, .instaBtn {
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
            overflow: hidden;
        }
        .bxl-github {
            background: #fff;
            color: #000;
        }
        .bxl-instagram { color: #bc2a8d; }
        @media screen and (max-width: 550px) {
            .chartToggle { display: none; }
            .chart-wrap { display: none; }
        }